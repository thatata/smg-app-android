<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smgLightBlue"
    tools:context="smg.tarek.rafa.systemmetricsgroup.activity.SeniorStaffActivity">

    <TextView
        android:id="@+id/staffName"
        android:text="@string/placeholder"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/staffPicture"
        android:layout_below="@id/staffName"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/staffPositionTitle"
        android:text="@string/placeholder"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:paddingTop="10sp"
        android:padding="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/staffPicture"/>

    <TextView
        android:id="@+id/staffBio"
        android:text="@string/placeholder"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="10sp"
        android:fontFamily="casual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/staffPositionTitle"/>

</RelativeLayout>
